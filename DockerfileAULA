FROM ubuntu:latest

#Instalando ferramentas de teste de rede

Run apt update
Run apt upgrade -y
Run apt install -y net-tools dnsutils iputils-ping
Run apt install openssh-server -y

# Adicionar um usuÃ¡rio
RUN useradd -m redes
# set user passord
RUN echo "redes:redes"|chpasswd

CMD [ "/usr/bin/tail","-f", "/dev/null" ]